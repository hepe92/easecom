@model CaseDetailsVM
@{ViewBag.title = "Edit Case";}
@{Html.RenderPartial("_HeaderNavBar");}

<div class="box">
    <form asp-controller="Case" asp-action="EditCase">
        <div class="form-group">
            <label for="headline" style="color: white;">Headline</label>
            <input type="text" asp-for="Headline" value="@Model.Headline" class="form-control">
            <input hidden type="text" asp-for="Creator" value="@Model.Creator" class="form-control">
            <input hidden type="text" asp-for="Id" value="@Model.Id" class="form-control">
        </div>
        <div class="form-group">
            <label for="description" style="color: white;">Description</label>
            <textarea type="text" rows="5" asp-for="Description" value="@Model.Description" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #FFB73A">Submit</button>
    </form>
</div>
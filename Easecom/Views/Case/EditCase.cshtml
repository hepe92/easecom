@model CaseEditVM
@{ViewBag.title = "Edit Case";}

<div class="box">
    <form asp-controller="Case" asp-action="EditCase" >
        <div class="form-group">
            <label for="headline" style="color: white;">Headline</label>
            <input type="text" asp-for="Headline" value="@Model.Headline" class="form-control" aria-describedby="emailHelp" placeholder="Input headline">

        </div>
        <div class="form-group">
            <label for="description" style="color: white;">Description</label>
            <input type="text" asp-for="Description" value="@Model.Description" class="form-control" placeholder="Input description">
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #FFB73A">Submit</button>
    </form>
</div>
@model AccountLoginVM
@{ViewBag.Title = "Login"; }
    <style>
        .btn {
            background-color: #FFB73A
        }
        .label, h1 {
            color: #FFB73A
        }

    </style>
    <h1>Login</h1>
    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <label class="label" asp-for="Username"></label>
        <br />
        <input asp-for="Username" value="user"/>
        <span asp-validation-for="Username"></span>
        <br />
        <label class="label" asp-for="Password"></label>
        <br />
        <input  asp-for="Password" value="Password_123"/>
        <span asp-validation-for="Password"></span>
        <br />
        <button value="Login" type="submit" class="btn">Login</button>
        <br />
        <a href="">Create Account</a>
    </form>

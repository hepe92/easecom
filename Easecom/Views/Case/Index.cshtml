@model CaseIndexVM
@{ ViewBag.Title = "Case";}
<div class="box">
    <div class="row">
        <div class="col-md-4 col-sm-12" id="headline">
            <h3 class="caseHeadline" style="color:white">Cases</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-12 align-items-center justify-content-center">
            <a asp-controller="Case" asp-action="CreateCase">
                <div class="card m-4" id="yellowButton">
                    <div class="btn">
                        <h7 class="card-title" style="font-weight: bold;">CREATE</h7>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (var caseInfo in Model.ItemVMs)
        {
            <div class="col-sm-12 col-md-4" colspan="3" id="casecol">
                <a asp-controller="Case" asp-route-id="@caseInfo.Id" asp-action="Details">
                    <div class="card m-4" id="casecard">
                        <div class="card-body text-center">
                            <h5 class="card-header" style="font-weight: bold;">@caseInfo.Headline</h5>
                            <p class="card-text"> @caseInfo.Description</p>
                        </div>
                    </div>
                </a>
            </div>
            //<button asp-controller="Case" class="btn" asp-route-id="@caseInfo.Id">@caseInfo.Headline</button>
        }
    </div>

</div>

@model CaseCreateVM
@{ ViewBag.Title = "Create Case";}

<div class="box">
    <form asp-controller="Case" asp-action="CreateCase" >
        <div class="form-group">
            <label for="headline" style="color: white;">Headline</label>
            <input type="text" asp-for="Headline" class="form-control" aria-describedby="emailHelp" placeholder="Input headline">
            
        </div>
        <div class="form-group">
            <label for="description" style="color: white;">Description</label>
            <textarea type="text" rows="5" asp-for="Description" class="form-control" placeholder="Input description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #FFB73A">Submit</button>
    </form>
</div>